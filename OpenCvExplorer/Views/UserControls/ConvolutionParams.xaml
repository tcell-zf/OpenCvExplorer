<UserControl x:Class="OpenCvExplorer.Views.UserControls.ConvolutionParams"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:model="clr-namespace:OpenCvExplorer.ViewModels.UserControls"
             xmlns:local="clr-namespace:OpenCvExplorer.Views.UserControls"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="300">
    <UserControl.DataContext>
        <model:ConvolutionParamsViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0"
               Content="{DynamicResource ResourceKey=uc-convolution-param-kernel}"
               Visibility="{Binding KernelVisibility}"/>
        <local:WidthHeight Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,5"
                           MinimumWidth="1" MaximumWidth="30" W="{Binding KernelWidth, Mode=TwoWay}"
                           MinimumHeight="1" MaximumHeight="30" H="{Binding KernelHeight, Mode=TwoWay}"
                           Visibility="{Binding KernelVisibility}"/>

        <Label Grid.Row="1" Grid.Column="0"
               Content="{DynamicResource ResourceKey=uc-convolution-param-anchor}"
               Visibility="{Binding AnchorVisibility}"/>
        <local:WidthHeight Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,5"
                           WidthContent="X:" MinimumWidth="-1" MaximumWidth="30" W="{Binding AnchorX, Mode=TwoWay}"
                           HeightContent="Y:" MinimumHeight="-1" MaximumHeight="30" H="{Binding AnchorY, Mode=TwoWay}"
                           Visibility="{Binding AnchorVisibility}"/>

        <Label Grid.Row="2" Grid.Column="0" Margin="3,0,0,0" Content="σ" Height="95" VerticalAlignment="Bottom"
               Visibility="{Binding SigmaVisibility}"/>
        <local:WidthHeight Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,5"
                           WidthContent="X:" MinimumWidth="0" MaximumWidth="30" W="{Binding SigmaX, Mode=TwoWay}"
                           HeightContent="Y:" MinimumHeight="0" MaximumHeight="30" H="{Binding SigmaY, Mode=TwoWay}"
                           Visibility="{Binding SigmaVisibility}"/>

        <Label Grid.Row="3" Grid.Column="0" Margin="3,0,0,0" Content="dx"
               Visibility="{Binding OrderVisibility}"/>
        <ui:NumberBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,5"
                      Minimum="-30" Maximum="30"
                      Value="{Binding XOrder, Mode=TwoWay}"
                      Visibility="{Binding OrderVisibility}"/>

        <Label Grid.Row="4" Grid.Column="0" Margin="3,0,0,0" Content="dy"
               Visibility="{Binding OrderVisibility}"/>
        <ui:NumberBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,5"
                      Minimum="-30" Maximum="30"
                      Value="{Binding YOrder, Mode=TwoWay}"
                      Visibility="{Binding OrderVisibility}"/>

        <Label Grid.Row="5" Grid.Column="0" Margin="3,0,0,0" Content="{DynamicResource uc-convolution-param-kernel-size}"
               Visibility="{Binding KernelSizeVisibility}"/>
        <ui:NumberBox Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,5"
                      Minimum="1" Maximum="31"
                      Value="{Binding KernelSize, Mode=TwoWay}"
                      Visibility="{Binding KernelSizeVisibility}"/>

        <Label Grid.Row="6" Grid.Column="0" Content="δ:"
               Visibility="{Binding DeltaVisibility}"/>
        <ui:NumberBox Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,5"
                      Minimum="-30" Maximum="30" SmallChange="0.1"
                      Value="{Binding Delta, Mode=TwoWay}"
                      Visibility="{Binding DeltaVisibility}"/>

        <Label Grid.Row="7" Grid.Column="0" Content="{DynamicResource uc-convolution-param-scale}"
               Visibility="{Binding ScaleVisibility}"/>
        <ui:NumberBox Grid.Row="7" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,5"
                      Minimum="-30" Maximum="30" SmallChange="0.1"
                      Value="{Binding Scale, Mode=TwoWay}"
                      Visibility="{Binding ScaleVisibility}"/>

        <Label Grid.Row="8" Grid.Column="0" Margin="3,0,0,0" Content="{DynamicResource ResourceKey=uc-convolution-param-bordertype}"
               Visibility="{Binding BorderTypeVisibility}"/>
        <ui:DropDownButton Grid.Row="8" Grid.Column="1" HorizontalContentAlignment="Left" VerticalAlignment="Top" Width="150"
                           Icon="{ui:SymbolIcon BorderOutsideThick24}"
                           Content="{Binding BorderType, Mode=OneWay}"
                           Visibility="{Binding BorderTypeVisibility}">
            <ui:DropDownButton.Flyout>
                <ContextMenu>
                    <MenuItem Header="Default" Command="{Binding SetBorderTypeDefaultCommand}"/>
                    <MenuItem Header="Constant" Command="{Binding SetBorderTypeConstantCommand}"/>
                    <MenuItem Header="Replicate" Command="{Binding SetBorderTypeReplicateCommand}"/>
                    <MenuItem Header="Reflect" Command="{Binding SetBorderTypeReflectCommand}"/>
                    <MenuItem Header="Wrap" Command="{Binding SetBorderTypeWrapCommand}"/>
                    <MenuItem Header="Reflect101" Command="{Binding SetBorderTypeReflect101Command}"/>
                    <MenuItem Header="Isolated" Command="{Binding SetBorderTypeIsolatedCommand}"/>
                </ContextMenu>
            </ui:DropDownButton.Flyout>
        </ui:DropDownButton>
    </Grid>
</UserControl>
