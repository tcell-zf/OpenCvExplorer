<UserControl x:Class="OpenCvExplorer.Views.UserControls.WidthHeight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OpenCvExplorer.Views.UserControls"
             mc:Ignorable="d" d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" x:Name="WidthLabel" Margin="0,0,3,0"
               Content="{DynamicResource ResourceKey=width}"/>
        <ui:NumberBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" x:Name="WidthBox"
                      Value="{Binding W, RelativeSource={RelativeSource AncestorType=local:WidthHeight}, Mode=TwoWay}"/>

        <ui:Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Width="120" Height="20"
                   Icon="{ui:SymbolIcon Link16}"
                   ToolTipService.ToolTip="{DynamicResource ResourceKey=uc-widthheight-link-tooltip}"
                   Click="Button_Click"/>

        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" x:Name="HeightLabel" Margin="0,0,3,0"
               Content="{DynamicResource ResourceKey=height}"/>
        <ui:NumberBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" x:Name="HeightBox"
                      Value="{Binding H, RelativeSource={RelativeSource AncestorType=local:WidthHeight}, Mode=TwoWay}"/>
    </Grid>
</UserControl>
